<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/C_GS"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:onClick="onGS25Clicked"
            android:text="GS25"
            android:textSize="20dp"

            app:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/RtoM"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"

            android:onClick="onRToMainClicked"
            android:text="메인화면"
            android:textSize="20dp"
            app:backgroundTint="#003CB3" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="413dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="60dp">

        <Button
            android:id="@+id/spe"
            android:onClick="onCU_SPEClicked"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginLeft="70dp"
            android:textSize="40dp"
            android:layout_marginTop="100dp"
            app:backgroundTint="#673AB7"
            android:text="CU PB"
            />

        <Button
            android:id="@+id/oPo"
            android:onClick="onCU_OPOClicked"

            android:layout_marginTop="100dp"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginLeft="70dp"
            android:textSize="40dp"
            app:backgroundTint="#673AB7"
            android:text="1+1"
             />

        <Button
            android:id="@+id/tPo"
            android:onClick="onCU_TPOClicked"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginLeft="70dp"
            android:textSize="40dp"
            android:layout_marginTop="100dp"
            app:backgroundTint="#673AB7"
            android:checkable="true"
            android:text="2+1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>